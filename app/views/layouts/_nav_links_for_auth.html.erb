<% if user_signed_in? %>
  <% if current_user.try(:admin?) %>
    <li><%= link_to 'Users', users_path %></li>
  <% end %>
  <% if current_user.try(:trucker?) or current_user.try(:security?) %>
    <li><%= link_to 'Shipments', shipments_path %></li>
    <li><%= link_to 'eManifests', manifests_path %></li>
    <li><%= link_to 'Bills of Lading', ladings_path %></li>
    <li><%= link_to 'Customs Invoices', invoices_path %></li>
  <% end %>
  <% if current_user.try(:customs?) %>
    <li><%= link_to 'Shipments', shipments_path %></li>
    <li><%= link_to 'Customs Invoices', invoices_path %></li>
  <% end %>
<% end %>
<% if user_signed_in? %>
  <li><%= link_to 'Edit account', edit_user_registration_path %></li>
  <li><%= link_to 'Sign out', destroy_user_session_path, :method=>'delete' %></li>
<% else %>
  <li><%= link_to 'Sign in', new_user_session_path %></li>
  <li><%= link_to 'Sign up', new_user_registration_path %></li>
<% end %>
